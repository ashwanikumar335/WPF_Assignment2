<Window x:Class="WPF_Assignment2.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Assignment2"
        mc:Ignorable="d"
        Title="Welcome" Height="350" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <Button Content="Manage Users" Height="53" HorizontalAlignment="Left" Margin="50,40,0,0" Name="btnManageUser" VerticalAlignment="Top" Width="220" Command="{Binding Path=ManageUserCommand}"/>

            <Button Content="Manage Issue" Height="53" HorizontalAlignment="Left" Margin="50,10,0,0" Name="btnManageIssue" VerticalAlignment="Top" Width="220" Command="{Binding Path=ManageIssueCommand}"/>

            <Button Content="Manage Notice" Height="53" HorizontalAlignment="Left" Margin="50,10,0,0" Name="btnManageNotice" VerticalAlignment="Top" Width="220" Command="{Binding Path=ManageNoticeCommand}"/>

            <Button Content="Search Employee" Height="53" HorizontalAlignment="Left" Margin="50,10,0,0" Name="btnSearchEmployee" VerticalAlignment="Top" Width="220" Command="{Binding Path=SearchEmployeeCommand}"/>

        </StackPanel>
    </Grid>
</Window>